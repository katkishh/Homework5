<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.homework5.presentation.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_imagesFragment"
            app:destination="@id/imagesFragment" />
        <action
            android:id="@+id/action_profileFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_profileFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
        <action
            android:id="@+id/action_profileFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>

    <fragment
        android:id="@+id/imagesFragment"
        android:name="com.example.homework5.presentation.images.ImagesFragment"
        android:label="ImagesFragment"
        tools:layout="@layout/fragment_images">
        <argument
            android:name="profileId"
            app:argType="string"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.homework5.presentation.posts.PostFragment"
        android:label="PostFragment"
        tools:layout="@layout/fragment_post">

        <argument
            android:name="post"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.homework5.presentation.posts.add.AddPostFragment"
        android:label="AddPostFragment"
        tools:layout="@layout/fragment_add_post"/>

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.homework5.presentation.feed.FeedFragment"
        android:label="FeedFragment" >
        <action
            android:id="@+id/action_feedFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_feedFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

</navigation>